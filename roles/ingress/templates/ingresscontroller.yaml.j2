apiVersion: operator.openshift.io/v1
kind: IngressController
metadata:
  name: "{{ ingress_name }}"
  namespace: openshift-ingress-operator
spec:
  replicas: {{ ingress_replicas | int }}
  defaultCertificate:
    name: "{{ ingress_tls_secret_name }}"
  nodePlacement:
    nodeSelector:
      matchLabels:
        ingress-controller: ""
